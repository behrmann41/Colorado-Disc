extends ../layout

block content
  h1= theCourse.name
  .container
    section.left

      h2 Course Location
      p.italic= theCourse.location
      h2 Number of Holes
      p.italic= theCourse.holecount
      h2 Year Established
      p.italic= theCourse.yearEst
      h2 Scores on Course
      p.italic= theCourse.lastround

      a(href='/courses/' + theCourse._id + '/newscore') New Score

      form(action="/courses/" + theCourse._id + '/delete', method="post")
        input(type="submit", class='delete' value="Delete Last Score")

    input(type="hidden" id="myHiddenId" runat="server")

    seciont.right

      div(class="chart")