extends ../layout

block content
  h1= theCourse.name
  .container
    section.left

      h2 Course Location
      h3= theCourse.location
      h2 Number of Holes
      h3= theCourse.holecount
      h2 Year Established
      h3= theCourse.yearEst
      if theCourse.lastround.length > 0
        h2 Scores on Course
        h3= theCourse.lastround


      a(href='/courses/' + theCourse._id + '/newscore') New Score

      form(action="/courses/" + theCourse._id + '/delete', method="post")
        input(type="submit", class='delete' value="Delete Last Score")

    seciont.right

      div(class="chart")