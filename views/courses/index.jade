extends ../layout

block content
    .container
      h1= title
      p.well Welcome to #{title}

      h2 List of Courses

      table
        thead
          tr
            th Name
            th Location
            th Hole Count
            th Year Established
        tbody
          for course in allCourses
            tr
              td= course.name
              td= course.location
              td= course.holecount
              td= course.yearEst

      a(href='/courses/new') New Course 